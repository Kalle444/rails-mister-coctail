<div class="container">
  <div class="row">
    <div class="body_size">
      <div class="col-xs-6 col-xs-offset-3">
        <h2><%= @cocktail.name %></h2>
        <% @doses.each do |dose| %>
        <p><%= "#{dose.description} of #{dose.ingredient.name}" %></p>
        <% end %>
        <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), {class: "btn btn-primary"} %>
        <%= link_to "Back to list of cocktails", cocktails_path, {class: "btn btn-primary"} %>
      </div>
    </div>
  </div>
</div>

